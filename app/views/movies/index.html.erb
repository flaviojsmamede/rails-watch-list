<h1>INDEX Movies</h1>
<%= link_to "Create movie", new_movie_path(@movie), class: "btn btn-primary" %>

<% @movies.each do |movie| %>
  <div class="card m-3">
    <%= image_tag movie.poster_url, alt: "movie poster", width: 100 %>
    <h2><%= movie.title %></h2>
    <p><%= movie.rating %></p>
    <%= link_to "See More", movie_path(movie), class: "btn btn-primary" %>
  </div>
<% end %>
